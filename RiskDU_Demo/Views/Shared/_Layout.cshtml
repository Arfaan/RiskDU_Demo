<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
     

            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Risk DU", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Grid", "Index", "Home")</li>
                        <li>@Html.ActionLink("Workflow", "About", "Home")</li>
                        <li>@Html.ActionLink("Detail", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Coverholder", "Coverholder", "Home")</li>
                        <li><a><i class="glyphicon glyphicon-comment"></i><div class="badge badge-notify">2</div></a></li>
                    </ul>
                 
                    <form class="navbar-form navbar-right">
                        <div >
                            <input type="text" ng-model="query" class="input-medium search-query" placeholder="Search">
                            <a class="btn btn-group-sm"><i class="glyphicon glyphicon-search"></i></a>
                            
                        </div>
                    </form>
                </div>
            </div>
    </div>
    <div class="container body-content">


        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
